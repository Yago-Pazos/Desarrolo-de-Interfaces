<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/catalogFragment">

    <fragment
        android:id="@+id/catalogFragment"
        android:name="com.example.mycatalog.CatalogFragment"
        android:label="@string/menu_catalog">
        <action
            android:id="@+id/action_catalogFragment_to_detailFragment"
            app:destination="@id/detailFragment" />
    </fragment>

    <fragment
        android:id="@+id/detailFragment"
        android:name="com.example.mycatalog.DetailFragment"
        android:label="Detail" />

    <fragment
        android:id="@+id/aboutFragment"
        android:name="com.example.mycatalog.AboutFragment"
        android:label="@string/menu_about" />

</navigation>
